<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.sebagarcia.tennis.Activities.ChallengeActivity">


    <TextView
        android:id="@+id/list_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:dividerHeight="3dp"
        android:background="#fff"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginStart="46dp"
        android:layout_alignBaseline="@+id/btn_gane"
        android:layout_alignBottom="@+id/btn_gane"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_gane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gané"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="1875p"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_perdi"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btn_perdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perdí"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="285dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_desafiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:text="Desafiar" />

</RelativeLayout>
